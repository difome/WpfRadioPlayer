<Window x:Class="RadioPlayer.Views.AddStationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить станцию" 
        Height="280" Width="520"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#2D2D2D"
        ShowInTaskbar="False"
        SizeToContent="Manual">
    <Border BorderBrush="#404040" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <TextBlock Text="Добавить станцию" FontSize="16" FontWeight="Bold" Foreground="White" 
                           VerticalAlignment="Center"/>
                <Button x:Name="CloseButton" Content="✕" FontSize="14" Foreground="White" 
                        Background="Transparent" BorderThickness="0" Padding="8"
                        HorizontalAlignment="Right" Width="30" Height="30" Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#969696"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <TextBlock Text="НАЗВАНИЕ" FontSize="12" Foreground="White" Margin="0,0,0,8"/>
                <TextBox x:Name="TitleTextBox" Background="#1F1F1F" Foreground="White" 
                         BorderBrush="#404040" BorderThickness="1" Padding="8" 
                         FontSize="14" VerticalContentAlignment="Center" Height="34"/>
                
                <TextBlock Text="URL" FontSize="12" Foreground="White" Margin="0,16,0,8"/>
                <TextBox x:Name="UrlTextBox" Background="#1F1F1F" Foreground="White" 
                         BorderBrush="#404040" BorderThickness="1" Padding="8" 
                         FontSize="14" VerticalContentAlignment="Center" Height="34"/>
            </StackPanel>
            
            <Button Grid.Row="2" Content="Добавить" FontSize="14" FontWeight="SemiBold" 
                    Foreground="Black" Background="#EDCC48" BorderThickness="0" 
                    Padding="20,8" HorizontalAlignment="Right" Margin="0,16,0,0"
                    Height="36" Cursor="Hand" Click="AddButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D4B340"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>

