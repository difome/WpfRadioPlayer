<Window x:Class="RadioPlayer.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе"
        Height="400" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#2D2D2D"
        ShowInTaskbar="False"
        SizeToContent="Height">
    <Border BorderBrush="#404040" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Text="О программе" FontSize="20" FontWeight="Bold" Foreground="White"
                           VerticalAlignment="Center" FontFamily="{StaticResource InterExtraBoldFont}"/>
                <Button x:Name="CloseButton" Content="✕" FontSize="14" Foreground="White"
                        Background="Transparent" BorderThickness="0" Padding="8"
                        HorizontalAlignment="Right" Width="30" Height="30" Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#d32f2f"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0,30,0,0" VerticalAlignment="Top">
                <TextBlock x:Name="AppNameText" Text="Радио плеер" FontSize="28"
                           FontWeight="ExtraBold" Foreground="White"
                           FontFamily="{StaticResource InterExtraBoldFont}"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="VersionText" FontSize="14" Foreground="#B1B1B1"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Автор:" FontSize="14" Foreground="#B1B1B1"
                           Margin="0,0,0,5"/>
                <TextBlock FontSize="14" Foreground="White" Margin="0,0,0,20">
                    <Hyperlink x:Name="AuthorLink" NavigateUri="https://github.com/difome"
                               Foreground="#EDCC48"
                               MouseLeftButtonDown="AuthorLink_MouseLeftButtonDown">
                        <Run Text="difome"/>
                    </Hyperlink>
                </TextBlock>

                <TextBlock Text="WPF приложение для воспроизведения интернет-радиостанций"
                           FontSize="12" Foreground="#B1B1B1"
                           TextWrapping="Wrap"
                           Margin="0,10,0,10"/>

                <CheckBox Content="Режим отладки (консоль)"
                          Foreground="#EDCC48"
                          IsChecked="{Binding ShowConsole, Mode=TwoWay}"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0"
                          Cursor="Hand"/>
            </StackPanel>

            <Button Grid.Row="2" Content="Закрыть"
                    HorizontalAlignment="Right"
                    Width="100" Height="35"
                    Background="#404040"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    Click="CloseButton_Click"
                    Margin="0,20,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#404040"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
