<Window x:Class="RadioPlayer.Views.MetadataDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Метаданные" 
        Height="500" Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#2D2D2D"
        ShowInTaskbar="False"
        SizeToContent="Manual">
    <Border BorderBrush="#404040" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <TextBlock Text="Метаданные станции" FontSize="16" FontWeight="Bold" Foreground="White" 
                           VerticalAlignment="Center"/>
                <Button x:Name="CloseButton" Content="✕" FontSize="14" Foreground="White" 
                        Background="Transparent" BorderThickness="0" Padding="8"
                        HorizontalAlignment="Right" Width="30" Height="30" Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#969696"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <ScrollViewer Grid.Row="1" Margin="0,20,0,0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="НАЗВАНИЕ СТАНЦИИ" FontSize="12" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock x:Name="StationTitleText" FontSize="14" Foreground="White" Margin="0,0,0,16"
                               TextWrapping="Wrap"/>
                    
                    <TextBlock Text="ТРЕК" FontSize="12" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TrackText" FontSize="14" Foreground="White" Margin="0,0,0,16"
                               TextWrapping="Wrap"/>
                    
                    <TextBlock Text="АРТИСТ" FontSize="12" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock x:Name="ArtistText" FontSize="14" Foreground="White" Margin="0,0,0,16"
                               TextWrapping="Wrap"/>
                    
                    <TextBlock Text="URL" FontSize="12" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock x:Name="UrlText" FontSize="14" Foreground="White" Margin="0,0,0,16"
                               TextWrapping="Wrap"/>
                    
                    <TextBlock x:Name="FormatLabel" Text="ФОРМАТ" FontSize="12" Foreground="White" Margin="0,0,0,8" Visibility="Collapsed"/>
                    <TextBlock x:Name="FormatText" FontSize="14" Foreground="White" Margin="0,0,0,16"
                               TextWrapping="Wrap" Visibility="Collapsed"/>
                    
                    <TextBlock x:Name="HeadersLabel" Text="HTTP ЗАГОЛОВКИ" FontSize="12" Foreground="White" Margin="0,16,0,8" Visibility="Collapsed"/>
                    <TextBlock x:Name="HeadersText" FontSize="12" Foreground="#B1B1B1" Margin="0,0,0,0"
                               TextWrapping="Wrap" Visibility="Collapsed" FontFamily="Consolas"/>
                </StackPanel>
            </ScrollViewer>
            
            <Button Grid.Row="2" Content="Закрыть" FontSize="14" FontWeight="SemiBold" 
                    Foreground="Black" Background="#EDCC48" BorderThickness="0" 
                    Padding="20,8" HorizontalAlignment="Right" Margin="0,16,0,0"
                    Height="36" Cursor="Hand" Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D4B340"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>

