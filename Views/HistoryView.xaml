<UserControl x:Class="RadioPlayer.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:RadioPlayer.Converters"
             xmlns:controls="clr-namespace:RadioPlayer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1F1F1F">
    <UserControl.Resources>
        <converters:StringToGeometryConverter x:Key="StringToGeometryConverter"/>
        
        <SolidColorBrush x:Key="HistoryItemBackground" Color="#1F1F1F"/>
        <SolidColorBrush x:Key="HistoryItemHoverBackground" Color="#FF2A2A2A"/>
        
        <PathGeometry x:Key="UpArrowGeometry">
            <PathFigure StartPoint="0,4">
                <LineSegment Point="8,4"/>
                <LineSegment Point="4,0"/>
            </PathFigure>
        </PathGeometry>
        
        <PathGeometry x:Key="DownArrowGeometry">
            <PathFigure StartPoint="0,0">
                <LineSegment Point="4,4"/>
                <LineSegment Point="8,0"/>
            </PathFigure>
        </PathGeometry>

        <Style x:Key="ScrollBarRepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="Border" Background="#303030" CornerRadius="0">
                            <Path x:Name="Arrow"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Fill="#606060"
                                  Data="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToGeometryConverter}}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#404040"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#707070"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#202020"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="MinHeight" Value="300"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="ThumbBorder" Background="#606060" CornerRadius="4"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#707070"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="#303030"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Bg" SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="18"/>
                            </Grid.RowDefinitions>

                            <Border Grid.RowSpan="3" Background="{TemplateBinding Background}" CornerRadius="0"/>

                            <RepeatButton x:Name="UpButton"
                                          Grid.Row="0"
                                          Style="{StaticResource ScrollBarRepeatButtonStyle}"
                                          Command="{x:Static ScrollBar.LineUpCommand}"
                                          Tag="{StaticResource UpArrowGeometry}"/>

                            <Track x:Name="PART_Track" Grid.Row="1" IsDirectionReversed="True" IsEnabled="{TemplateBinding IsEnabled}" ViewportSize="NaN">
                                <Track.Resources>
                                    <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarButtonHeightKey}">80</sys:Double>
                                </Track.Resources>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource ScrollBarRepeatButtonStyle}" Command="{x:Static ScrollBar.PageUpCommand}" Height="Auto" Tag=""/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource ScrollBarRepeatButtonStyle}" Command="{x:Static ScrollBar.PageDownCommand}" Height="Auto" Tag=""/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb MinHeight="30">
                                        <Thumb.Style>
                                            <Style TargetType="Thumb" BasedOn="{StaticResource {x:Type Thumb}}">
                                                <Setter Property="MinHeight" Value="30"/>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>

                            <RepeatButton x:Name="DownButton"
                                          Grid.Row="2"
                                          Style="{StaticResource ScrollBarRepeatButtonStyle}"
                                          Command="{x:Static ScrollBar.LineDownCommand}"
                                          Tag="{StaticResource DownArrowGeometry}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <Button x:Name="FilterTodayButton" Content="За сегодня" 
                    Click="FilterButton_Click" Tag="Today"
                    BorderThickness="0" Padding="12,8" Margin="0,0,8,0"
                    FontSize="13" Cursor="Hand"
                    FocusVisualStyle="{x:Null}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2D2D2D"/>
                        <Setter Property="Foreground" Value="#B1B1B1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#3A3A3A"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="FilterYesterdayButton" Content="Вчера" 
                    Click="FilterButton_Click" Tag="Yesterday"
                    BorderThickness="0" Padding="12,8" Margin="0,0,8,0"
                    FontSize="13" Cursor="Hand"
                    FocusVisualStyle="{x:Null}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2D2D2D"/>
                        <Setter Property="Foreground" Value="#B1B1B1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#3A3A3A"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="FilterAllButton" Content="Все" 
                    Click="FilterButton_Click" Tag="All"
                    BorderThickness="0" Padding="12,8" Margin="0,0,0,0"
                    FontSize="13" Cursor="Hand"
                    FocusVisualStyle="{x:Null}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2D2D2D"/>
                        <Setter Property="Foreground" Value="#B1B1B1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#3A3A3A"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <Border Grid.Row="1" Background="#2D2D2D" Height="34" CornerRadius="4" Margin="0,0,0,16">
            <Grid>
                <TextBox x:Name="SearchTextBox"
                         IsReadOnly="True"
                         Background="#2D2D2D"
                         Foreground="#FFFFFF"
                         BorderThickness="0"
                         Padding="8,3,30,4"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         GotFocus="SearchTextBox_GotFocus"
                         LostFocus="SearchTextBox_LostFocus"
                         PreviewMouseLeftButtonDown="SearchTextBox_PreviewMouseLeftButtonDown"
                         TextChanged="SearchTextBox_TextChanged"
                         Cursor="IBeam"
                         TextWrapping="NoWrap"
                         AcceptsReturn="False">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                ClipToBounds="True">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                          Margin="{TemplateBinding Padding}"
                                                          Focusable="False"
                                                          HorizontalScrollBarVisibility="Disabled"
                                                          VerticalScrollBarVisibility="Disabled"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsReadOnly" Value="True">
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button x:Name="ClearSearchButton"
                        Content="✕"
                        FontSize="14"
                        Foreground="#969696"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,0"
                        Width="30"
                        Height="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,8,0"
                        Cursor="Hand"
                        Click="ClearSearchButton_Click"
                        Visibility="Collapsed"
                        Panel.ZIndex="1">
                </Button>
            </Grid>
        </Border>

        <ScrollViewer x:Name="HistoryScrollViewer" Grid.Row="2" VerticalScrollBarVisibility="Auto" Background="Transparent">
            <ItemsControl x:Name="HistoryItemsControl" Background="Transparent">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0" Margin="0,0,0,12" Padding="12" 
                                CornerRadius="4" 
                                FocusVisualStyle="{x:Null}"
                                MouseLeftButtonDown="HistoryItem_MouseLeftButtonDown"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{StaticResource HistoryItemBackground}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource HistoryItemHoverBackground}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="{Binding StationTitle}" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White" 
                                           Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="{Binding TrackTitle}" 
                                           FontSize="14" 
                                           Foreground="#EAEAEA" 
                                           Margin="0,0,0,2"
                                           TextWrapping="Wrap"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="{Binding Artist}" 
                                           FontSize="12" 
                                           Foreground="#B1B1B1" 
                                           Margin="0,0,0,0"
                                           TextWrapping="Wrap"/>
                                
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           Grid.RowSpan="3"
                                           Text="{Binding PlayedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                           FontSize="11" 
                                           Foreground="#808080" 
                                           VerticalAlignment="Top"
                                           HorizontalAlignment="Right"
                                           Margin="12,0,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <controls:ToastNotification x:Name="ToastNotificationControl"/>
    </Grid>
</UserControl>
