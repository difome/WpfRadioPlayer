<UserControl x:Class="RadioPlayer.Views.StationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:RadioPlayer.Converters"
             xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1F1F1F">
    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:StringToGeometryConverter x:Key="StringToGeometryConverter"/>

        <PathGeometry x:Key="UpArrowGeometry">
            <PathFigure StartPoint="0,4">
                <LineSegment Point="8,4"/>
                <LineSegment Point="4,0"/>
            </PathFigure>
        </PathGeometry>

        <PathGeometry x:Key="DownArrowGeometry">
            <PathFigure StartPoint="0,0">
                <LineSegment Point="4,4"/>
                <LineSegment Point="8,0"/>
            </PathFigure>
        </PathGeometry>

        <!-- color resources for station items -->
        <SolidColorBrush x:Key="StationBackground" Color="#1F1F1F"/>
        <SolidColorBrush x:Key="StationHoverBackground" Color="#FF2A2A2A"/>
        <SolidColorBrush x:Key="StationSelectedBackground" Color="#FF3D4D4D"/>
        <SolidColorBrush x:Key="StationSelectedHoverBackground" Color="#FF4D5D5D"/>
        <SolidColorBrush x:Key="StationCurrentBackground" Color="#FF2A2A2A"/>
        <SolidColorBrush x:Key="StationCurrentHoverBackground" Color="#FF3A3A3A"/>

        <!-- Стиль для кнопок стрелок скроллера -->
        <Style x:Key="ScrollBarRepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="Border" Background="#303030" CornerRadius="0">
                            <Path x:Name="Arrow"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Fill="#606060"
                                  Data="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToGeometryConverter}}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#404040"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#707070"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#202020"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для thumb (ползунок) -->
        <Style TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="MinHeight" Value="300"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="ThumbBorder" Background="#606060" CornerRadius="4"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#707070"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ScrollBar -->
        <Style TargetType="ScrollBar">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="#303030"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Bg" SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="18"/>
                            </Grid.RowDefinitions>

                            <Border Grid.RowSpan="3" Background="{TemplateBinding Background}" CornerRadius="0"/>

                            <RepeatButton x:Name="UpButton"
                                          Grid.Row="0"
                                          Style="{StaticResource ScrollBarRepeatButtonStyle}"
                                          Command="{x:Static ScrollBar.LineUpCommand}"
                                          Tag="{StaticResource UpArrowGeometry}"/>

                            <Track x:Name="PART_Track" Grid.Row="1" IsDirectionReversed="True" IsEnabled="{TemplateBinding IsEnabled}" ViewportSize="NaN">
                                <Track.Resources>
                                    <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarButtonHeightKey}">80</sys:Double>
                                </Track.Resources>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource ScrollBarRepeatButtonStyle}" Command="{x:Static ScrollBar.PageUpCommand}" Height="Auto" Tag=""/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource ScrollBarRepeatButtonStyle}" Command="{x:Static ScrollBar.PageDownCommand}" Height="Auto" Tag=""/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb MinHeight="30">
                                        <Thumb.Style>
                                            <Style TargetType="Thumb" BasedOn="{StaticResource {x:Type Thumb}}">
                                                <Setter Property="MinHeight" Value="30"/>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>

                            <RepeatButton x:Name="DownButton"
                                          Grid.Row="2"
                                          Style="{StaticResource ScrollBarRepeatButtonStyle}"
                                          Command="{x:Static ScrollBar.LineDownCommand}"
                                          Tag="{StaticResource DownArrowGeometry}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D2D" Height="34" CornerRadius="4" Margin="0,0,0,16">
                <Grid>
                    <TextBox x:Name="SearchTextBox"
                         Text="{Binding SearchText, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="True"
                         Background="#2D2D2D"
                         Foreground="#FFFFFF"
                         BorderThickness="0"
                         Padding="8,3,30,4"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         GotFocus="SearchTextBox_GotFocus"
                         LostFocus="SearchTextBox_LostFocus"
                         PreviewMouseLeftButtonDown="SearchTextBox_PreviewMouseLeftButtonDown"
                         TextChanged="SearchTextBox_TextChanged"
                         Cursor="IBeam"
                         TextWrapping="NoWrap"
                         AcceptsReturn="False">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                ClipToBounds="True">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                          Margin="{TemplateBinding Padding}"
                                                          Focusable="False"
                                                          HorizontalScrollBarVisibility="Disabled"
                                                          VerticalScrollBarVisibility="Disabled"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsReadOnly" Value="True">
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button x:Name="ClearSearchButton"
                        Content="✕"
                        FontSize="14"
                        Foreground="#969696"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,0"
                        Width="30"
                        Height="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,8,0"
                        Cursor="Hand"
                        Click="ClearSearchButton_Click"
                        Visibility="Collapsed"
                        Panel.ZIndex="1">
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="Transparent"
                      KeyDown="ScrollViewer_KeyDown" Focusable="True"
                      PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <ItemsControl ItemsSource="{Binding Stations}" Background="Transparent">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel AllowDrop="True" Drop="StackPanel_Drop" DragOver="StackPanel_DragOver" Background="Transparent"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="0" Margin="0,0,0,16" Padding="8" Cursor="Hand"
                            CornerRadius="4"
                            MouseLeftButtonDown="Border_MouseLeftButtonDown"
                            MouseMove="Border_MouseMove"
                            AllowDrop="True" DragOver="Border_DragOver" Drop="Border_Drop"
                            PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown"
                            DragLeave="Border_DragLeave"
                            MouseLeftButtonUp="Border_MouseLeftButtonUp"
                            KeyDown="Border_KeyDown"
                            Focusable="True"
                            FocusVisualStyle="{x:Null}">
                        <Border.ContextMenu>
                            <ContextMenu Background="#2D2D2D" BorderBrush="#404040" BorderThickness="1"
                                         Opened="ContextMenu_Opened"
                                         DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <ContextMenu.Style>
                                    <Style TargetType="ContextMenu">
                                        <Setter Property="Background" Value="#2D2D2D"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ContextMenu">
                                                    <Border Background="#2D2D2D"
                                                            BorderBrush="#404040"
                                                            BorderThickness="1"
                                                            CornerRadius="4">
                                                        <ItemsPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ContextMenu.Style>
                                <ContextMenu.Resources>
                                    <Style TargetType="MenuItem">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#3D3D3D"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </ContextMenu.Resources>
                                <MenuItem Header="Воспроизвести"
                                          Click="MenuItem_Play_Click"
                                          Foreground="White"
                                          Background="Transparent">
                                    <MenuItem.Icon>
                                        <Border Background="Transparent" Width="16" Height="16">
                                            <Path Data="M8 5v14l11-7z" Fill="White" Stretch="Uniform"/>
                                        </Border>
                                    </MenuItem.Icon>
                                    <MenuItem.InputGestureText>Enter</MenuItem.InputGestureText>
                                </MenuItem>
                                <MenuItem Header="Добавить"
                                          Click="MenuItem_Add_Click"
                                          Foreground="White"
                                          Background="Transparent">
                                    <MenuItem.Icon>
                                        <Border Background="Transparent" Width="16" Height="16">
                                            <TextBlock Text="+" Foreground="White" FontSize="16" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator Background="#404040"/>
                                <MenuItem Header="Изменить название"
                                          Click="MenuItem_Edit_Click"
                                          Foreground="White"
                                          Background="Transparent">
                                    <MenuItem.Icon>
                                        <Border Background="Transparent" Width="16" Height="16">
                                            <Path Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" Fill="White" Stretch="Uniform"/>
                                        </Border>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Метаданные"
                                          Click="MenuItem_Metadata_Click"
                                          Foreground="White"
                                          Background="Transparent">
                                    <MenuItem.Icon>
                                        <Border Background="Transparent" Width="16" Height="16">
                                            <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" Fill="White" Stretch="Uniform"/>
                                        </Border>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator Background="#404040"/>
                                <MenuItem Header="Удалить"
                                          Click="MenuItem_Delete_Click"
                                          Foreground="White"
                                          Background="Transparent">
                                    <MenuItem.Icon>
                                        <Border Background="Transparent" Width="16" Height="16">
                                            <Path Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" Fill="White" Stretch="Uniform"/>
                                        </Border>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource StationBackground}"/>
                                <Style.Triggers>
                                    <!-- selected (not playing, not hovered) -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsSelected}" Value="True"/>
                                            <Condition Binding="{Binding IsCurrentStation}" Value="False"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{StaticResource StationSelectedBackground}"/>
                                    </MultiDataTrigger>

                                    <!-- selected + hovered (not playing) -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsSelected}" Value="True"/>
                                            <Condition Binding="{Binding IsCurrentStation}" Value="False"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{StaticResource StationSelectedHoverBackground}"/>
                                    </MultiDataTrigger>

                                    <!-- currently playing (not hovered) -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsCurrentStation}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{StaticResource StationCurrentBackground}"/>
                                    </MultiDataTrigger>

                                    <!-- currently playing + hovered -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsCurrentStation}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{StaticResource StationCurrentHoverBackground}"/>
                                    </MultiDataTrigger>

                                    <!-- normal hover for non-current, non-selected -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                            <Condition Binding="{Binding IsSelected}" Value="False"/>
                                            <Condition Binding="{Binding IsCurrentStation}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{StaticResource StationHoverBackground}"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" x:Name="DropIndicatorTop" Height="2" Background="#FFD700"
                                    Visibility="Collapsed" HorizontalAlignment="Stretch"/>
                            <ContentControl Grid.Row="1" x:Name="ContentPart">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Index}" FontSize="12" Foreground="#666666"
                                                   Margin="0,0,8,0" VerticalAlignment="Center" Width="24"/>
                                        <StackPanel Grid.Column="1" MouseLeftButtonDown="StackPanel_MouseLeftButtonDown"
                                                    Background="Transparent">
                                            <TextBlock FontSize="15" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,4"
                                                       TextTrimming="CharacterEllipsis" TextWrapping="NoWrap">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}">
                                                        <Binding Path="Title"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding Title}"/>
                                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCurrentStation}" Value="True">
                                                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                                                <Setter Property="Text">
                                                                    <Setter.Value>
                                                                        <MultiBinding StringFormat="{}{1} - {0}">
                                                                            <Binding Path="CurrentArtist" FallbackValue=""/>
                                                                            <Binding Path="CurrentTrack" FallbackValue=""/>
                                                                        </MultiBinding>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock FontSize="11" Margin="0,0,0,2"
                                                       TextTrimming="CharacterEllipsis" TextWrapping="NoWrap">
                                                <TextBlock.Text>
                                                    <Binding Path="Stream"/>
                                                </TextBlock.Text>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#aaaaaa"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCurrentStation}" Value="True">
                                                                <Setter Property="Foreground" Value="#dddddd"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                    <Button Grid.Column="1" Content="★" FontSize="16"
                                            Background="Transparent" BorderThickness="0" Padding="8,0"
                                            Cursor="Hand" Click="FavoriteButton_Click"
                                            Focusable="False" VerticalAlignment="Top" Margin="0,4,0,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Foreground" Value="#666666"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="Transparent"
                                                                    BorderThickness="0"
                                                                    CornerRadius="0">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                        <Setter Property="Foreground" Value="#FFD700"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Foreground" Value="#FFD700"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </ContentControl>
                            <Border Grid.Row="2" x:Name="DropIndicatorBottom" Height="2" Background="#FFD700"
                                    Visibility="Collapsed" HorizontalAlignment="Stretch"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
    </Grid>
</UserControl>
